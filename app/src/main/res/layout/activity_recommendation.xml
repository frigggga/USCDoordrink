<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_large"
        android:text="Some Recommendations"
        android:fontFamily="@font/winkle"
        android:textColor="@color/black"
        android:textSize="@dimen/margin_large"
        android:gravity="center"
        />


    <ImageView
        android:id="@+id/add_store_logo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/uscdoordrink_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_normal"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/dp_30">

        <TextView
            android:id="@+id/recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:background="@null"
            android:textSize="@dimen/dp_15"
            android:text="Guess you like:"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large">

        <TextView
            android:id="@+id/recommendation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="40dp"
            android:background="@null"
            android:text="Item1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/goToStore1"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_200"
            android:layout_marginTop="12dp"
            android:text="Go to store"
            />

        <TextView
            android:id="@+id/recommendation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="40dp"
            android:background="@null"
            android:text="Item2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/goToStore2"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_200"
            android:layout_marginTop="48dp"
            android:text="Go to store"
            />

        <TextView
            android:id="@+id/recommendation3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="40dp"
            android:background="@null"
            android:text="Item3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/goToStore3"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_200"
            android:layout_marginTop="84dp"
            android:text="Go to store"
            />

        <TextView
            android:id="@+id/recommendation4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="126dp"
            android:layout_marginBottom="40dp"
            android:background="@null"
            android:text="Item4"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_15" />

        <Button
            android:id="@+id/goToStore4"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_200"
            android:layout_marginTop="120dp"
            android:text="Go to store"
            />

        <TextView
            android:id="@+id/recommendation5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="162dp"
            android:background="@null"
            android:text="Item5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/goToStore5"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_200"
            android:layout_marginTop="156dp"
            android:text="Go to store"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_return"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/margin_large"
        android:background="@drawable/btn_maroon_selector"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:text="Return"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>