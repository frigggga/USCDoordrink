<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OrderDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/order_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/black"
                android:fontFamily="@font/winkle"
                android:text="Order Info"
                android:gravity="center"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_info"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="71dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="order name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_n"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:text="store UID"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/order_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_uid"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:text="Status"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/order_ci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_s"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:text="123456789"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/order_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_ci"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:text="325 adams st"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_a"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:text="total price"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/order_lst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_total"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="order list"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/order_status_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_lst"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/veryPeri"
                android:text="manage order"
                android:textSize="@dimen/margin_normal"
                android:visibility="invisible" />

            <Button
                android:id="@+id/order_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_lst"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="-1dp"
                android:backgroundTint="@color/veryPeri"
                android:text="complete order"
                android:textSize="@dimen/margin_normal"
                android:visibility="invisible" />

            />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
